  | Caesar
  | Parrot
  deriving (Enum, Bounded)

instance Show AnimalCategory where
  show = \case
    Dog -> "Dog"
    Cat -> "Cat"
    Toaster -> "Toaster"
    Caesar -> "Caesar"
    Parrot -> "Parrot"

data AnimalType
  = Mammal
  | Salad
  | Bird
  | NotToaster
  deriving (Enum, Bounded)

instance Show AnimalType where
  show = \case
    Mammal -> "mammal"
    Salad -> "salad"
    Bird -> "bird"
